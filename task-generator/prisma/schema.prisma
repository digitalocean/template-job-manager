generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id           Int       @id @default(autoincrement())
  taskData     Json      @map("task_data")
  scheduledAt  DateTime  @default(now()) @map("scheduled_at") // Default to the current timestamp
  startedAt    DateTime? @map("started_at")                   // Nullable field for when the task starts
  processedAt  DateTime? @map("processed_at")
  processedBy  String?   @map("processed_by")
  taskOutput   String?   @map("task_output")
  @@map("tasks")
}
